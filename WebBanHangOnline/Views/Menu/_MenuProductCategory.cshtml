@model IEnumerable<WebBanHangOnline.Models.EF.ProductCategory>

@if (Model != null && Model.Any())
{

    <div class="banner">
        <div class="container">
            <div class="row">
                <div class="col text-center">
                    <div class="section_title new_arrivals_title">
                        <h2>CATEGORIES</h2>
                    </div>
                </div>
            </div>
            <div class="row my-5">
                @foreach (var item in Model)
                {
                    <div class="col-md-3">
                        <div class="banner_item align-items-center" style="background-image: url(@item.Icon)">
                            <div class="banner_category">
                                <a href="/products">@item.Title</a>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
}